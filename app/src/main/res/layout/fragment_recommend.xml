<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical">

    <com.candy.tool.view.ActionView
        android:id="@+id/recommend_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:scene="recommend" />

    <LinearLayout
        android:id="@+id/candy_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recommend_action"
        android:layout_margin="16dp"
        android:background="@drawable/shape_white_corner"
        android:divider="@drawable/shape_divide_gray"
        android:minHeight="60dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:showDividers="middle">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/coin_name"
            android:textColor="@color/gray_tab"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/coin_name_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:cursorVisible="true"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:textCursorDrawable="@null"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/invite_link_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/candy_name_layout"
        android:layout_margin="16dp"
        android:background="@drawable/shape_white_corner"
        android:divider="@drawable/shape_divide_gray"
        android:minHeight="60dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:showDividers="middle">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/invite_url"
            android:textColor="@color/gray_tab"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/coin_url_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:cursorVisible="true"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:textCursorDrawable="@null"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/invite_link_layout"
        android:layout_margin="16dp"
        android:background="@drawable/shape_white_corner"
        android:divider="@drawable/shape_divide_gray"
        android:minHeight="160dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:showDividers="middle">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="@string/coin_description"
            android:textColor="@color/gray_tab"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/coin_description_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:cursorVisible="true"
            android:gravity="top"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:textCursorDrawable="@null"
            android:textSize="18sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/coin_recommend_tv"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/selector_recommend"
        android:enabled="false"
        android:gravity="center"
        android:text="@string/recommend_submit"
        android:textColor="@color/gray_tab"
        android:textSize="18sp" />


</RelativeLayout>
