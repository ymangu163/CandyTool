<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coin_name"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"

            />
        <EditText
            android:id="@+id/coin_name_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:hint="@string/hint_input_coin_name"
            android:singleLine="true"
            android:background="@drawable/shape_white_corner"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/invite_url"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"

            />
        <EditText
            android:id="@+id/coin_url_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:hint="@string/hint_input_url"
            android:singleLine="true"
            android:background="@drawable/shape_white_corner"
            android:inputType="textUri"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/coin_description"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="16dp"

        />

    <EditText
        android:id="@+id/coin_description_et"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:hint="@string/hint_input_description"
        android:background="@drawable/shape_white_stroke"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/coin_recommend_tv"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/recommend_submit"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"
        android:background="@drawable/selector_recommend"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        />

</LinearLayout>
