<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:divider="@drawable/shape_divider"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:showDividers="middle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/coin_name"
                android:textColor="@color/black"
                android:textSize="18sp"

                />

            <EditText
                android:id="@+id/coin_name_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_white_corner"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:paddingLeft="8dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/invite_url"
                android:textColor="@color/black"
                android:textSize="18sp"

                />

            <EditText
                android:id="@+id/coin_url_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_white_corner"
                android:inputType="textUri"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:paddingLeft="8dp"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="6dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="6dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/coin_description"
            android:textColor="@color/black"
            android:textSize="18sp"

            />

        <EditText
            android:id="@+id/coin_description_et"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_white_stroke"
            android:gravity="top"
            android:hint="@string/hint_input_description"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/coin_recommend_tv"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/selector_recommend"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="@string/recommend_submit"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/recommend_reward_tv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/selector_reward"
            android:gravity="center"
            android:text="@string/reward"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:visibility="invisible" />
    </RelativeLayout>
</LinearLayout>
