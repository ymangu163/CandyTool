<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical">

    <com.candy.tool.view.ActionView
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_height"
        app:title="@string/tab_three"
        app:back_enable="false"
        />


    <TextView
        android:id="@+id/feedback_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_item_height"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="@string/action_feedback"
        android:textColor="@color/gray_tab"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/help_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_item_height"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="@string/action_help"
        android:textColor="@color/gray_tab"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/my_share_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_item_height"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:text="@string/action_share"
        android:textColor="@color/gray_tab"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/my_about_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_item_height"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="@string/my_about"
        android:textColor="@color/gray_tab"
        android:textSize="16sp" />

</LinearLayout>
