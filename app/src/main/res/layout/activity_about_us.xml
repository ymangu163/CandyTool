<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_bg"
    >

    <LinearLayout
        android:id="@+id/about_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="100dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingBottom="16dp"
        >

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/app_name"
            android:textColor="#c0000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/about_us_version_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#c0000000"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:id="@+id/textViewVersion"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector_setting_item"
            android:text="@string/about_us_check_for_update"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/color_gray_light" />

        <TextView
            android:id="@+id/privacy_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/privacy_policy"
            android:textColor="@color/black_80"
            android:background="@drawable/selector_setting_item"
            android:gravity="center"
            android:textSize="16sp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="@string/about_contact_gmail"
        android:textColor="@color/black_80"
        android:textSize="18sp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:background="@color/white"
        />

    <TextView
        android:id="@+id/about_authority_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:gravity="center_horizontal"
        android:text="@string/about_copyright"
        android:textColor="#c0000000"
        android:textSize="18sp"
        android:background="@color/white"
        />

</LinearLayout>
